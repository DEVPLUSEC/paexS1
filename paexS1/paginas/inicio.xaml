<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="paexS1.paginas.inicio">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label x:Name="txtUsuaconec"  HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="semana 1 PAEX " TextColor ="red" FontSize="18" HorizontalTextAlignment="Center"></Label>
            <Entry x:Name="txtDato" Placeholder="Ingrese año de nacimiento" Keyboard="Numeric" MaxLength="4"></Entry>
            <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked"></Button>

            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre" ></Entry>
            <Entry x:Name="txtApellido" Placeholder="Ingrese su apellido" ></Entry>
            <Entry x:Name="txtSalario" Placeholder="Ingrese su salario" Keyboard="Numeric" MaxLength="4"></Entry>
            <Entry x:Name="txtDireccion" Placeholder="Ingrese su direccion"></Entry>

            <Button x:Name="btnEnviar" Text="Enviar datos" Clicked="btnEnviar_Clicked"></Button>

            
            
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>